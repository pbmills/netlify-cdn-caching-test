---
// This page fetches data from a free API that can be slow
// The data will be cached by Netlify CDN to speed up subsequent requests

interface Country {
  name: {
    common: string;
    official: string;
  };
  capital: string[];
  population: number;
  region: string;
  subregion: string;
  flags: {
    png: string;
    svg: string;
  };
  currencies: Record<string, { name: string; symbol: string }>;
  languages: Record<string, string>;
}

let countries: Country[] = [];
let loadTime = 0;
let error: string | null = null;
let cacheStatus = 'MISS';
let cacheNote = '';

try {
  const startTime = Date.now();
  
  // Using REST Countries API - it's free and returns a lot of data
  // This can be slow, especially with all fields
  const response = await fetch('https://restcountries.com/v3.1/all?fields=name,capital,population,region,subregion,flags,currencies,languages', {
    headers: {
      'Accept': 'application/json',
    },
  });
  
  if (!response.ok) {
    throw new Error(`API returned ${response.status}`);
  }
  
  countries = await response.json();
  loadTime = Date.now() - startTime;
  
  // Check for cache indicators
  // Note: In local development, there's no CDN cache, so it will always be MISS
  // On Netlify production, the CDN cache works but we infer status from load time
  const requestHeaders = Astro.request.headers;
  const host = requestHeaders.get('host') || '';
  const isLocalDev = host.includes('localhost') || host.includes('127.0.0.1');
  
  // Check for explicit cache status headers (Cloudflare, etc.)
  const cfCacheStatus = requestHeaders.get('cf-cache-status') || 
                        requestHeaders.get('x-cache-status') ||
                        requestHeaders.get('x-vercel-cache');
  
  if (cfCacheStatus) {
    cacheStatus = cfCacheStatus;
  } else if (isLocalDev) {
    // In local dev, there's no CDN cache
    cacheStatus = 'MISS (local dev)';
    cacheNote = 'CDN caching only works on Netlify production';
  } else if (loadTime < 100) {
    // Very fast load time suggests cache hit
    // First request is usually 1-3 seconds, cached requests are < 100ms
    cacheStatus = 'HIT (inferred)';
    cacheNote = 'Fast load time suggests CDN cache';
  } else {
    // Slow load time suggests cache miss
    cacheStatus = 'MISS';
    cacheNote = 'Slow load time suggests fetching from origin';
  }
  
} catch (err) {
  error = err instanceof Error ? err.message : 'Unknown error occurred';
  cacheStatus = 'ERROR';
}

// Sort countries by population (descending)
countries.sort((a, b) => b.population - a.population);

// Set cache headers for this response
Astro.response.headers.set('Cache-Control', 'public, s-maxage=3600, stale-while-revalidate=86400');

// Create CSS class name for cache status
const cacheStatusClass = cacheStatus.replace(/\s+/g, '-').toLowerCase();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Netlify CDN Caching Demo" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Netlify CDN Caching Demo</title>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-primary-500 via-primary-600 to-purple-600 p-4 md:p-8 text-gray-800">
    <div class="max-w-7xl mx-auto bg-white rounded-2xl shadow-2xl p-4 md:p-8">
      <header class="text-center mb-8 pb-8 border-b-2 border-gray-200">
        <h1 class="text-3xl md:text-5xl text-primary-500 mb-2 font-bold">üåç Netlify CDN Caching Demo</h1>
        <p class="text-gray-600 text-lg md:text-xl">
          Demonstrating how CDN caching speeds up slow API responses
        </p>
      </header>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <div class="bg-gradient-to-br from-primary-500 to-purple-600 text-white p-6 rounded-xl text-center">
          <div class="text-sm md:text-base opacity-90 mb-2">Countries Loaded</div>
          <div class="text-3xl md:text-4xl font-bold">{countries.length}</div>
        </div>
        <div class="bg-gradient-to-br from-primary-500 to-purple-600 text-white p-6 rounded-xl text-center">
          <div class="text-sm md:text-base opacity-90 mb-2">Load Time</div>
          <div class="text-3xl md:text-4xl font-bold">{loadTime}ms</div>
        </div>
        <div class="bg-gradient-to-br from-primary-500 to-purple-600 text-white p-6 rounded-xl text-center">
          <div class="text-sm md:text-base opacity-90 mb-2">Cache Status</div>
          <div class="text-3xl md:text-4xl font-bold">
            <span class={`inline-block px-4 py-2 rounded-full text-sm font-bold ${
              cacheStatus.includes('HIT') 
                ? 'bg-green-500 text-white' 
                : cacheStatus.includes('MISS') 
                ? 'bg-amber-500 text-white' 
                : 'bg-gray-500 text-white'
            }`}>{cacheStatus}</span>
          </div>
          {cacheNote && (
            <div class="text-xs opacity-75 mt-2">{cacheNote}</div>
          )}
        </div>
      </div>

      <div class="flex flex-wrap gap-4 mb-8">
        <button 
          onclick="window.location.reload()"
          class="bg-primary-500 hover:bg-primary-600 text-white border-none px-6 py-3 rounded-lg text-base cursor-pointer transition-all duration-300 font-semibold hover:-translate-y-0.5 hover:shadow-lg active:translate-y-0"
        >
          üîÑ Reload Page
        </button>
        <button 
          onclick="clearCache()"
          class="bg-red-500 hover:bg-red-600 text-white border-none px-6 py-3 rounded-lg text-base cursor-pointer transition-all duration-300 font-semibold hover:-translate-y-0.5 hover:shadow-lg active:translate-y-0"
        >
          üóëÔ∏è Clear Cache
        </button>
        <button 
          onclick="fetchFreshData()"
          class="bg-primary-500 hover:bg-primary-600 text-white border-none px-6 py-3 rounded-lg text-base cursor-pointer transition-all duration-300 font-semibold hover:-translate-y-0.5 hover:shadow-lg active:translate-y-0"
        >
          üì• Fetch Fresh Data
        </button>
      </div>

      {error && (
        <div class="bg-red-100 text-red-800 p-4 rounded-lg mb-8 border-l-4 border-red-500">
          <strong>Error:</strong> {error}
        </div>
      )}

      {countries.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {countries.slice(0, 50).map((country) => (
            <div class="bg-gray-50 border-2 border-gray-200 rounded-xl p-6 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg hover:border-primary-500">
              <div class="text-xl font-bold text-primary-500 mb-2">{country.name.common}</div>
              {country.flags?.png && (
                <img 
                  src={country.flags.png} 
                  alt={`Flag of ${country.name.common}`}
                  class="w-[60px] h-10 object-cover rounded border border-gray-300 mb-2"
                  loading="lazy"
                />
              )}
              <div class="mt-4 text-sm text-gray-600">
                <p class="my-2"><strong class="text-gray-800">Official Name:</strong> {country.name.official}</p>
                {country.capital && country.capital.length > 0 && (
                  <p class="my-2"><strong class="text-gray-800">Capital:</strong> {country.capital.join(', ')}</p>
                )}
                <p class="my-2"><strong class="text-gray-800">Population:</strong> {country.population.toLocaleString()}</p>
                <p class="my-2"><strong class="text-gray-800">Region:</strong> {country.region}</p>
                {country.subregion && (
                  <p class="my-2"><strong class="text-gray-800">Subregion:</strong> {country.subregion}</p>
                )}
                {country.currencies && Object.keys(country.currencies).length > 0 && (
                  <p class="my-2">
                    <strong class="text-gray-800">Currency:</strong>{' '}
                    {Object.values(country.currencies)
                      .map((c) => `${c.name} (${c.symbol})`)
                      .join(', ')}
                  </p>
                )}
                {country.languages && Object.keys(country.languages).length > 0 && (
                  <p class="my-2">
                    <strong class="text-gray-800">Languages:</strong>{' '}
                    {Object.values(country.languages).join(', ')}
                  </p>
                )}
              </div>
            </div>
          ))}
        </div>
      ) : !error && (
        <div class="text-center py-12 text-gray-600">Loading countries data...</div>
      )}
    </div>

    <script>
      async function clearCache() {
        try {
          const response = await fetch('/api/clear-cache', {
            method: 'POST',
          });
          const data = await response.json();
          alert(data.message || 'Cache cleared! Reloading page...');
          setTimeout(() => {
            window.location.reload();
          }, 1000);
        } catch (error) {
          alert('Error clearing cache: ' + error.message);
        }
      }

      async function fetchFreshData() {
        // Force a fresh fetch by adding a cache-busting parameter
        window.location.href = window.location.pathname + '?t=' + Date.now();
      }
    </script>
  </body>
</html>